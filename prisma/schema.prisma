generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String     @id
  email       String     @unique
  name        String?
  image       String?
  slug        String?    @unique
  description String?
  published   Boolean    @default(false)
  categories  Category[]
  links       Link[]
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  index       Int
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  links       Link[]

  @@index(userId)
}

model Link {
  id           Int       @id @default(autoincrement())
  title        String
  url          String
  thumbnailUrl String
  index        Int
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?
  category     Category? @relation(fields: [categoryId], references: [id])
  categoryId   Int?

  @@index(userId)
  @@index(categoryId)
}
