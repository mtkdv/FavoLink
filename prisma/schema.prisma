generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String     @id
  // id         String     @id @default(cuid())
  email      String     @unique
  name       String?
  image      String?
  categories Category[]
  links      Link[]
  profile    Profile?
}

model Profile {
  id          String  @id @default(cuid())
  name        String?
  image       String?
  slug        String? @unique
  description String?
  published   Boolean @default(false)
  user        User    @relation(fields: [userId], references: [id])
  userId      String  @unique
}

model Category {
  id          String  @id @default(cuid())
  name        String
  description String?
  index       Int
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  links       Link[]

  @@index(userId)
}

model Link {
  id           String    @id @default(cuid())
  title        String
  url          String
  thumbnailUrl String
  index        Int
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?
  category     Category? @relation(fields: [categoryId], references: [id])
  categoryId   String?

  @@index(userId)
  @@index(categoryId)
}
