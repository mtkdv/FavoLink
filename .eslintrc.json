{
  "extends": ["plugin:import/recommended", "next/core-web-vitals", "prettier"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
